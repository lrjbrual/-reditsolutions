<div id="contact" class="parallax-container">
    <%= render partial: 'layouts/navbar' %>
      <div class="parallax contact-image">
        <div class="container">
          <div class="right p-contact">
            <h2>
              Let us Help You
            </h2>
          </div>
        </div>
      </div>
</div>
<div class="parallax-container contact-container">
  <div class="row container">
    <div class="col s12 m5 l5">
      <div class="company-info">
        <div class="card-panel orange accent-2">
        <span class="black-text">
          <h4>NetStarted</h4>
            <p class="left-align light">
              <i class="fa fa-map-marker fa-contact"></i>&nbsp;&nbsp;&nbsp;&nbsp;<span class="adress">General Patton street 33 1050 Brussel</span>
            <br>
              <i class="fa fa-envelope fa-contact"></i>&nbsp;&nbsp;&nbsp;<span class='email'>info@reditsolution.com</span>
            <br>
            <i class="fa fa-phone fa-contact"></i>&nbsp;&nbsp;&nbsp;<span class='phone'>+32(0)489/635.823</span>
            </p>
        </span>
      </div>
    </div>
  </div>
    <div class="col s12 m7 l7">
      <form class="col s12">
          <h4>Contact Us</h4>
          <h6>Send us email for more inquiries</h6>
          <%= form_for :contact, url: contacts_path do |f| %>
             <div class="input-field col s12">
               <%= f.text_field :name, required:true, id:"name", type:"text", class: "validate" %>
               <%= f.label :your_name, for:"name", required: true   %>
             </div>
              <div class="input-field col s12">
                <%= f.text_field :phone, required:true, id:"phone", type:"text", class: "validate" %>
                <%= f.label :phone_number, for:"phone", required: true  %>
              </div>
              <div class="input-field col s12 left">
                <%= f.email_field :email, required:true, id: "email", type: "email", class:"validate" %>
                <%= f.label :your_email, for: "Email", required: true  %>
              </div>
              <div class="input-field col s12">
               <%= f.text_field :message, required:true, id: "textarea1", class:"materizalize-textarea"%>
               <%= f.label :type_your_message, for: "textarea1", required: true  %>
             </div>
              <div class="hidden">
                <%= f.label :nickname %><br>
                <%= f.text_field :nickname, hint: 'leave this blanck' %>
              </div>
            <div class="send-button">
              <%= f.submit 'Send Message', class:"waves-effect waves-light btn orange accent-2"%>
            </div>
          <% end %>
      </form>
    </div>
  </div>
      <div class="parallax map-image">
      </div>
</div>
